@using TRBabyShop.Core.Models
@model IEnumerable<CategoryViewModel>;


@{
    ViewBag.Title = "Categories";
}


<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="text-center row">
      <a asp-controller="Product" asp-action="Add" class="btn btn-primary">
        <i class="bi bi-plus-circle "></i>&nbsp; Add Category
    </a>

    @foreach (var cat in Model)
    {
        <div class="card col-2" style="width: 20rem; ">
              <div class="card-body">

                <h5 class="card-title mt-1">@cat.Name</h5>
            </div>

            <form class="input-group-sm" asp-controller="Product" asp-action="ProductsByCategory" asp-route-categoryId="@cat.Id">
                <input type="submit" value="Products" class="fs-6 btn btn-success mb-3 p-2" />
            </form>
        </div>
    }
</div>
