@using TRBabyShop.Core.Models
@model IEnumerable<ProductViewModel>;

@{
    ViewBag.Title = "All Products";
}


<h2 class="text-center">@ViewBag.Title</h2>

<div class="text-center row">
    @foreach (var prod in Model)
    {
        <div class="col-lg-3 col-lg-1">
            <div class="row p-2">
                <div class=" p-1">
                    <div class="card border-primary " style="width: 20rem; border-radius: 5px; ">
                        <a asp-controller="Product" asp-action="GetById" asp-route-productId="@prod.Id" method="get">
                            <img class="card-img-top" style="width: 18rem;"
                             src="@prod.Image">
                        </a>
                        <div class="card-body">

                            <h5 class="card-title mt-3">@prod.Name</h5>
                            <h5 class="mb-2">Price: @prod.Price</h5>
                            <a asp-controller="Review" asp-action="All" asp-route-productId="@prod.Id">
                                <p class="mb-2"> <i class="bi bi-star-fill">  Reviews </i></p>

                            </a>
                          @*  <a asp-controller="Review" asp-action="Add" asp-route-productId="@prod.Id">
                                <p class="mb-2">Add review </p>
                            </a>*@
                            <a asp-controller="Product" asp-action="Details" asp-route-productId="@prod.Id">
                            <button type="button" class="btn btn-warning">Details</button>
                            </a>
                        </div>

                        <form class="input-group-sm" asp-controller="Product" asp-action="All" asp-route-productId="@prod.Id">

                            <input type="submit" value="Add to Cart" class="fs-6 btn btn-info mb-3 p-2" />
                        </form>
                        <form class="input-group-sm" asp-controller="User" asp-action="AddToCollection" asp-route-productId="@prod.Id">
                            <input type="submit" value="Add to Fav" class="fs-6 btn btn-secondary mb-3 p-2" />
                        </form>
                        <form class="input-group-sm" asp-controller="Product" asp-action="Update"
                          asp-route-productId="@prod.Id">
                            <input type="submit" value="Update Product" class="fs-6 btn btn-success mb-3 p-2" />
                        </form>
                        <form class="input-group-sm" asp-controller="Product" asp-action="Delete" asp-route-productId="@prod.Id">
                            <input type="submit" value="Delete Product" class="fs-6 btn btn-danger mb-2 p-1" />
                        </form>


                    </div>
                </div>
            </div>
        </div>
    }

</div>
