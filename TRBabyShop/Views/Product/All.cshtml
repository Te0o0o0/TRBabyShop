@model IEnumerable<ProductViewModel>;

@{
    ViewBag.Title = "All Products";
}


<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="text-center row">
    @foreach (var prod in Model)
    {
        <div class="card col-3" style="width: 15rem; ">
            <img class="card-img-top" style="width: 14rem;"
             src="@prod.Image" @*alt="Product Name"*@>
            <div class="card-body">

                <h5 class="card-title mt-3">@prod.Name</h5>
                <p class="mb-2">Price: @prod.Price</p>
                <p class="mb-2">Reviews: @prod.Reviews</p>
               @* <p>Description: @prod.Description</p>*@
            </div>

            <form class="input-group-sm" asp-controller="Product" asp-action="All" asp-route-productId="@prod.Id">
                <input type="submit" value="Add to Cart" class="fs-6 btn btn-success mb-3 p-2" />
            </form>
        </div>
    }
</div>
