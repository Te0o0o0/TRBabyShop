@using TRBabyShop.Core.Models

@model ProductViewModel

<form method="post">
    <input hidden asp-for="Id" />
        <div class="card  container pt-4">
            <div class="card-header bg-primary text-light ml-0  row ">
                <div class="col-12 col-md-6">
                    <h1 class="text-white-50">@Model.Name</h1>
              
            </div>
            <div class="card-body row container">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-8 col-lg-8">

                            @*<div class="row pl-2">
                                <h5 class="text-muted">ISBN : @Model.Reviews</h5>
                            </div>*@
                            <div class="row pl-2">
                                <h5 class="text-muted pb-2"> Price: @Model.Price.ToString("c")</h5>
                            </div>
                            <div class="row text-center pl-2">
                                <div class="p-1 col-2 bg-secondary border-bottom">
                                    <div>Quantity</div>
                                </div>
                            </div>
                            <div class="row text-center pl-2"; font-weight:bold">
                                <div class="p-1 col-2 bg-secondary">
                                    <div>Price</div>
                                </div>
                                <div class="p-1 col-2 bg-secondary">
                                    <div>@Model.Price.ToString("c")</div>
                                </div>
                                
                            </div>
                            <div class="row pl-2">
                                <p class="text-secondary">@Html.Raw(Model.Description)</p>
                            </div>
                           @* <div class="row pl-2">
                                <div class="col-2 text-primary"><h4>Quantity</h4></div>
                                <div class="col-10"><input asp-for="Product.Quantity" class="form-control"  /></div>
                            </div>*@
                        </div>
                        <div class="col-12 col-lg-3 offset-lg-1 text-center">
                            <img src="@Model.Image" width="100%" class="rounded" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="row">
                    <div class="col-12 col-md-6 pb-1">
                        <a class="btn btn-success form-control " style="height:50px;" asp-action="Index">Back to Home</a>
                    </div>
                    <div class="col-12 col-md-6 pb-1">
                        <button type="submit" value="Add to Cart" class="btn btn-primary form-control" style="height:50px;">Add to Cart</button>
                    </div>
                </div>
            </div>
        </div>
</form>



