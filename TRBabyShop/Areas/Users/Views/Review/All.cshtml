@using TRBabyShop.Core.Models
@model IEnumerable<ReviewViewModel>;

@{
    ViewBag.Title = "All Reviews";
}


<h2 class="text-center">@ViewBag.Title</h2>
<hr />

@foreach (var rev in Model)
{
    <div class="d-flex flex-start mt-4 text-light">
        <a class="me-3" href="#">
          
        </a>

        <div class="flex-grow-1 flex-shrink-1">
            <div>
                <div class="d-flex justify-content-between align-items-center text-light">
                    <p class="mb-1">
                        @rev.User.UserName <span class="small">@rev.CreatedOn</span>
                    </p>
                </div>
                <p class="small mb-0 text-light">
                    @rev.Text
                </p>

                <br />
                
            </div>
        </div>
        <div class="d-flex justify-content-between align-items-center gap-1"> 
            <a asp-area="Users" asp-controller="Review" asp-action="Delete" asp-route-reviewId="@rev.Id" class="btn btn-outline-danger btn-sm">Delete</a>
        </div>
    </div>
    <hr />
}


