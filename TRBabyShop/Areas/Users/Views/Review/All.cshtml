@using TRBabyShop.Core.Models
@using static TRBabyShop.Infrastructure.Data.Common.Constants
@model IEnumerable<ReviewViewModel>;


@{
    ViewBag.Title = "All Reviews";
}


<h2 class="text-center">@ViewBag.Title</h2>


<div class="card  container pt-4">
     <div class="col-6 text-end mb-3">
                        <a asp-area="Users" asp-controller="Product" asp-action="All" class="btn btn-secondary btn-sm">Back to Products</a>
                    </div>
    <div class="card  container pt-4">

        @foreach (var rev in Model)
        {
            <div class="card text-dark bg-warning mb-3" style="max-width: 20rem;">
                <div class="card-header">
                    <p class="mb-1">
                        @rev.User  , @rev.CreatedOn
                    </p>
                </div>
                <div class="card-body">
                    <p class="small mb-0 text-dark">
                        @rev.Text
                    </p>
                </div>
            </div>
            <hr />
        }
    </div>
</div>


