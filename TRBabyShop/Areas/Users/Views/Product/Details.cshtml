@using TRBabyShop.Core.Models
@using TRBabyShop.Infrastructure.Data.Models

@model ShoppingCartViewModel

<form method="post">
    <input hidden asp-for="Product.Id" />
        <div class="card  container pt-4">
            <div class="card-header  text-dark ml-0  row ">
                <div class="col-12 col-md-6">
                    <h1 class="text-dark-50">@Model.Product.Name</h1>
              
            </div>
            <div class="card-body row container">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-8 col-lg-8">
                            <div class="row pl-2">
                                <h5 class="text pb-2"> Price: @Model.Product.Price.ToString("c")</h5>
                            </div>
                            <div class="row pl-2">
                                <p class="text-dark">@Html.Raw(Model.Product.Description)</p>
                            </div>
                            <div class="row pl-2">
                                <div class="col-2 text-dark"><h4>Quantity</h4></div>
                                <div class="col-3"><input asp-for="Quantity" class="form-control"  /></div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-3 offset-lg-1 text-center">
                            <img src="@Model.Product.Image" width="100%" class="rounded" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="row">
                    <div class="col-12 col-md-6 pb-1">
                        <a class="btn btn-warning form-control" style="height:50px;" asp-area="Users" asp-action="All">Back</a>
                    </div>
                    <div class="col-12 col-md-6 pb-1">
                        <button type="submit" value="Add to Cart" class="btn btn-info form-control" style="height:50px;">Add to Cart</button>
                    </div>
                </div>
            </div>
        </div>
</form>
