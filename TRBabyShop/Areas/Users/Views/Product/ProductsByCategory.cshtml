@using TRBabyShop.Core.Models
@model IEnumerable<ProductViewModel>;


@{
    ViewBag.Title = "Products";
}


<h2 class="text-center">@ViewBag.Title</h2>

<div class="text-center row">
    @foreach (var prod in Model)
    {
        <div class="card col-16" style="width: 15rem; ">
            <img class="card-img-top" style="width: 13rem;"
             src="@prod.Image" alt="Product Image">

            <div class="card-body">

                <h5 class="card-title mt-1">@prod.Name</h5>
                <p class="mb-2">Price: @prod.Price</p>
                <p class="mb-2">Reviews: @prod.Reviews</p>
            </div>


            <form class="input-group-sm" asp-area="Users" asp-controller="Product" asp-action="All" asp-route-categoryId="@prod.Id">
                <input type="submit" value="Add to Cart" class="fs-6 btn btn-success mb-2 p-1" />
            </form>

            <form class="input-group-sm" asp-area="Admin" asp-controller="Product" asp-action="Delete" asp-route-productId="@prod.Id">
                <input type="submit" value="Delete Product" class="fs-6 btn btn-success mb-2 p-1" />
            </form>
        </div>
    }
</div>