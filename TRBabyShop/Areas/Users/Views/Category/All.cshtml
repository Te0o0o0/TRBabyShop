@using TRBabyShop.Core.Models

@model IEnumerable<CategoryViewModel>;


@{
    ViewBag.Title = "Categories";
}


<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="text-center row">
    @foreach (var cat in Model)
    {
        <div class="col-lg-3 col-lg-1">
            <div class="row p-2">
                <div class=" p-1">
                    <div class="card border-primary " style="width: 20rem; border-radius: 5px; ">
                       
                        <div class="card-body">
                            <h5 class="card-title mt-3">@cat.Name</h5>
                        </div>

                            <form class="input-group-sm" asp-area="Users" asp-controller="Product" asp-action="ProductsByCategory" asp-route-categoryId="@cat.Id">
                                <input type="submit" value="Products" class="fs-6 btn btn-info mb-2 p-1" />
                            </form>
                    </div>
                </div>
            </div>
        </div>
    }

</div>


