@using TRBabyShop.Core.Models
@using static TRBabyShop.Infrastructure.Data.Common.Constants
@model CategoryViewModel

@{
    ViewBag.Title = "Add Category";
}

<h1 class="text-center pt-4">@ViewBag.Title</h1>


<div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
    <form method="post">
        <fieldset>
            <div class="mb-3">
                <label asp-for="@Model.Name" class="form-label">Name</label>
                <input asp-for="@Model.Name" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Image" class="form-label">Image</label>
                <input asp-for="@Model.Image" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Image" class="text-danger"></span>
            </div>

            <br />
            <div class="mb-3">
                <input class="btn btn-primary" type="submit" onclick="return ValidateInput()" value="Submit" />
            </div>
        </fieldset>
    </form>
</div>

@section Scripts
    {
    <script>
        function ValidateInput() {
            Swal.fire({
                position: 'top-end',
                icon: 'success',
                title: 'Category has been added successfully',
                showConfirmButton: false,
                timer: 2500
            })
        }
    </script>
}
